{
	"cardType": 83,
	"cardName": "Coalescing Stardust",
	"effText": "When your Avatar's S changes, change my C by the same amount.\n2 turns after I'm cast, deck->summon a Pulsar with less S than my C.",
	"effects": [
		{
			"blurb": "Coalesce +C",
			"triggerData": {
				"triggerCondition": "S Change",
				"triggerRestriction": {
					"$type": "Restrict.Triggering:AllOf:",
					"elements": [
						{ "$type": "Restrict.Gamestate:ThisCardInPlay:" },
						{
							"$type": "Restrict.Triggering:CardsMatch:",
							"card": { "$type": "Identify.Cards:CardBefore:" },
							"other": {
								"$type": "Identify.Cards:Avatar:",
								"player": { "$type": "Identify.Players:FriendlyPlayer:" }
							}
						}
					]
				}
			},
			"subeffects": [
				{
					"$type": "Subeffect:TargetThis:"
				},
				{
					"$type": "Subeffect:ChangeCardStats:",
					"cMultiplier": 1
				}
			]
		},
		{
			"blurb": "Coalesce Summon",
			"triggerData": {
				"triggerCondition": "Play",
				"triggerRestriction": {
					"$type": "Restrict.Triggering:CardsMatch:",
					"card": { "$type": "Identify.Cards:CardBefore:" },
					"other": { "$type": "Identify.Cards:ThisCardNow:" }
				}
			},
			"subeffects": [
				{
					"$type": "Subeffect:Hanging.Delay:",
					"numTimesToDelay": 1,
					"jumpIndices": [
						1
					],
					"endCondition": "Turn Start"
				},
				{
					"$type": "Subeffect:TargetThis:"
				},
				{
					"$type": "Subeffect:SetXByNumberIdentity:",
					"numberIdentity": { 
						"$type": "Identify.Numbers:FromCardValue:",
						"card": { "$type": "Identify.Cards:TargetIndex:" },
						"cardValue": { "value": "C" }
					}
				},
				{
					"$type": "Subeffect:CardTarget:",
					"blurb": "Pulsar to coalesce",
					"toSearch": { "$type": "Identify.ManyCards:Deck:" },
					"cardRestriction": {
						"$type": "Restrict.Cards:AllOf:",
						"elements": [
							{ "$type": "Restrict.Cards:Friendly:" },
							{ "$type": "Restrict.Cards:Character:" },
							{
								"$type": "Restrict.Cards:Subtypes:",
								"subtypes": [ "Pulsar" ]
							},
							{
								"$type": "Restrict.Cards:CardValueFits:",
								"cardValue": { "value": "S" },
								"numberRestriction": {
									"$type": "Restrict.Numbers:Compare:",
									"comparison": { "$type": "Relationships.Numbers:LessThan:" },
									"other": { "$type": "Identify.Numbers:EffectX:" }
								}
							}
						]
					}
				},
				{
					"$type": "Subeffect:SpaceTarget:",
					"blurb": "where to play newly coalesced Pulsar",
					"spaceRestriction": {
						"$type": "Restrict.Spaces:AllOf:",
						"elements": [
							{ "$type": "Restrict.Spaces:Empty:" },
							{
								"$type": "Restrict.Spaces:CanPlayCard:",
								"toPlay": { "$type": "Identify.Cards:TargetIndex:" }
							}
						]
					}
				},
				{
					"$type": "Subeffect:Play:"
				}
			]
		}
	],
	"c": 1,
	"spellTypes": [
		"Delayed"
	],
	"subtypeText": "Delayed",
	"duration": 2
}